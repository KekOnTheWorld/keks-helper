{
	"compilerOptions": {
		"target": "ESNext",
		"module": "ESNext",
		"outDir": "build",
		"rootDir": "src",
		"strict": true,
		"moduleResolution": "Node",
		"allowSyntheticDefaultImports": true,

		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,

		"skipLibCheck": false,
		"forceConsistentCasingInFileNames": true,

		"baseUrl": "src"
	},
	"exclude": ["build", "node_modules"]
}
